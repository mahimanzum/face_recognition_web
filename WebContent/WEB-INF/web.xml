<?xml version="1.0" encoding="UTF-8"?>
<web-app 
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
    version="3.0">>
  <display-name>billing</display-name>
  <welcome-file-list>
    <welcome-file>home/login.jsp</welcome-file>
  </welcome-file-list>
  

  	
  	<filter>
    	<filter-name>PerformanceLogFilter</filter-name>
    	<filter-class>filter.PerformanceLogFilter</filter-class>
	</filter>
	
    <filter-mapping>
    	<filter-name>PerformanceLogFilter</filter-name>
    	<url-pattern>/*</url-pattern>
  	</filter-mapping>	
	
	<filter>
		<filter-name>CharsetFilter</filter-name>
		<filter-class>filter.CharsetFilter</filter-class>
		<init-param>
			<param-name>requestEncoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>
	
	<filter-mapping>
		<filter-name>CharsetFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>	



	<filter>
		<filter-name>CommonExceptionFilter</filter-name>
		<filter-class>filter.CommonExceptionHandlerFilter</filter-class>
	</filter>
	
	<filter-mapping>
		<filter-name>CommonExceptionFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>




	
	<filter>
		<filter-name>LoginFilter</filter-name>
		<filter-class>filter.LoginFilter</filter-class>
	</filter>
	
	<filter-mapping>
		<filter-name>LoginFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
	<filter>
		<filter-name>PreferredLanguageFilter</filter-name>
		<filter-class>language.PreferredLanguageFilter</filter-class>
	</filter>
	
	<filter-mapping>
		<filter-name>PreferredLanguageFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
	
		
	<filter>
    	<filter-name>MenuPermissionFilter</filter-name>
    	<filter-class>filter.MenuPermissionFilter</filter-class>
  	</filter>  
  
    <filter-mapping>
    	<filter-name>MenuPermissionFilter</filter-name>
    	<url-pattern>/*</url-pattern>
  	</filter-mapping>
</web-app>